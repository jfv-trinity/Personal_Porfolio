<div class="row justify-content-md-center">
    <div class="col-8">
        
        <form method="POST">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" id="name" aria-describedby="name" 
              name="name" placeholder="Enter name"
              required>
            </div>

            <div class="form-group">
                <label for="number">Contact Number</label>
                <input type="text" class="form-control" id="number" aria-describedby="name" 
                name="number" placeholder="Enter contact number"
                required>
              </div>
              
              <div class="form-group">
                <label for="email">Email</label>
                <input type="text" class="form-control" id="email" aria-describedby="email" 
                name="email" placeholder="Enter email" 
                required>
              </div>
            
            <button type="submit" class="btn btn-primary btn-lg"><i class="fas fa-plus-circle"></i> Add Contact</button>
            <a href="/business-list" class="btn btn-warning btn-lg"><i class="fas fa-undo"></i> Cancel</a>
          </form>

    </div>
</div>